<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    app:columnCount="4"
    app:rowCount="5">

    <!-- Fila 1 -->
    <Button
        android:id="@+id/btnCA"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="CA"
        android:textSize="20sp"
        android:onClick="borrar"
        app:backgroundTint="#FF6F00"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="0"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="C"
        android:textSize="20sp"
        android:onClick="borrar"
        app:backgroundTint="#FF6F00"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="0"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/btnPorcentaje"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="%"
        android:textSize="24sp"
        android:onClick="cambiarOperador"
        app:backgroundTint="#FF6F00"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="0"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/btnDividir"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="รท"
        android:textSize="24sp"
        android:onClick="cambiarOperador"
        app:backgroundTint="#FF6F00"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="0"
        app:layout_rowWeight="1" />

    <!-- Fila 2 -->
    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="7"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:onClick="seleccionarNumero"
        app:backgroundTint="#673AB7"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="8"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:onClick="seleccionarNumero"
        app:backgroundTint="#673AB7"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="9"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:onClick="seleccionarNumero"
        app:backgroundTint="#673AB7"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/btnMultiplicar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="X"
        android:textSize="24sp"
        android:onClick="cambiarOperador"
        app:backgroundTint="#FF6F00"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="1" />

    <!-- Fila 3 -->
    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="4"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:onClick="seleccionarNumero"
        app:backgroundTint="#673AB7"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="5"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:onClick="seleccionarNumero"
        app:backgroundTint="#673AB7"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="6"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:onClick="seleccionarNumero"
        app:backgroundTint="#673AB7"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/btnRestar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="-"
        android:textSize="24sp"
        android:onClick="cambiarOperador"
        app:backgroundTint="#FF6F00"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="1" />

    <!-- Fila 4 -->
    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="1"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:onClick="seleccionarNumero"
        app:backgroundTint="#673AB7"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="3"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="2"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:onClick="seleccionarNumero"
        app:backgroundTint="#673AB7"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="3"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="3"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:onClick="seleccionarNumero"
        app:backgroundTint="#673AB7"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="3"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/btnSumar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="+"
        android:textSize="24sp"
        android:onClick="cambiarOperador"
        app:backgroundTint="#FF6F00"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="3"
        app:layout_rowWeight="1" />

    <!-- Fila 5 -->
    <Button
        android:id="@+id/btnPunto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="."
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:onClick="seleccionarNumero"
        app:backgroundTint="#673AB7"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="4"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="0"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:onClick="seleccionarNumero"
        app:backgroundTint="#673AB7"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="4"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/btnIgual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="="
        android:textSize="24sp"
        android:onClick="igual"
        app:backgroundTint="#FF5722"
        app:layout_column="2"
        app:layout_columnSpan="2"
        app:layout_columnWeight="2"
        app:layout_row="4"
        app:layout_rowWeight="1" />

</androidx.gridlayout.widget.GridLayout>